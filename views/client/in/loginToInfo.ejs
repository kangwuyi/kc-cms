<div class="wrapper">
    <div class="container">
            <div class="loginInfoDom">
                <div class="infoTitle">
                    <h1>注册信息填写  ( :</h1>
                </div>
                <div class="infoBox container-fluid">
                    <form method="post" class="loginInfoFrom" action='/in/registerSubmit'>
                        <table class="boxTable table table-striped">
                            <tr class="boxTr">
                                <td class="col-md-4">用户名</td>
                                <td class="col-md-8"><input name="userName" class="userName" type="text" onblur="userNameTest()"/><span class="text"></span></td>
                            </tr>
                            <tr class="boxTr">
                                <td class="col-md-4">邮箱</td>
                                <td class="col-md-8"><input name="userEmail" class="userEmail" type="text"/><span class="text"></span></td>
                            </tr>
                            <tr class="boxTr">
                                <td class="col-md-4">密码</td>
                                <td class="col-md-8"><input name="userPwd" class="userPwd" type="text"/><span class="text"></span></td>
                            </tr>
                            <tr class="boxTr boxTrPwdText">
                                <td class="col-md-4">密码确认</td>
                                <td class="col-md-8"><input name="userAffirmPwd" class="userAffirmPwd" type="text" onblur="confirmpwd()"/><span class="text"></span></td>
                            </tr>
                            <tr class="boxTr">
                                <td class="col-md-4"><a href="">查看说明</a></td>
                                <td class="col-md-8"><a class="buttonList">确认注册</a></td>
                            </tr>
                        </table>
                    </form>
                </div>
            </div>
